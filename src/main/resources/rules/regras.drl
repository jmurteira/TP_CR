rule "Escolher Item"
no-loop
	salience 70
	when
		$f:Fatura()
	then		
		int id;
		System.out.printf("Informe o ID da peça (0 para sair): ");
		Scanner ler = new Scanner(System.in);
		id = ler.nextInt();
		
		if ( id != 0 )
		{		
			$f.setIdAtual(id);
			update($f);
			drools.setFocus("Verifica");
		}
		
		//System.out.printf("ID FATURA: " + $f.getIdAtual());
		
end
